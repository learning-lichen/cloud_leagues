<%= form_for @user do |form| %>
  <%= render "shared/error_messages", target: @user %>

  <fieldset>
    <table>
      <tr>
	<td><%= form.label :login, "Username" %></td>
	<td><%= form.text_field :login %></td>
      </tr>
      
      <tr>
	<td><%= form.label :email, "Email" %></td>
	<td><%= form.email_field :email %></td>
      </tr>
      
      <tr>
	<td><%= form.label :password, "Password" %></td>
	<td><%= form.password_field :password %></td>
      </tr>

      <tr>
	<td><%= form.label :password_confirmation, "Confirm Password" %></td>
	<td><%= form.password_field :password_confirmation %></td>
      </tr>
      
      <tr>
	<td></td><td style="text-align: right;"><%= form.submit "Submit" %></td>
      </tr>
    </table>
  </fieldset>
<% end %>
