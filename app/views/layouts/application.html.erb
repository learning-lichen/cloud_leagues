<!DOCTYPE html>
<html>
  <head>
    <title>Cloud Leagues - <%= content_for?(:title) ? yield(:title) : "Online Starcraft 2 Leagues" %></title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    
    <script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-29316848-1']);
      _gaq.push(['_trackPageview']);
      
      (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    </script>
  </head>
  <body>
    <div id="contentWrapper">
      <header>
	<%= content_for?(:site_navigation) ? yield(:site_navigation) : render("shared/site_navigation") %>
      </header>
      
      <div id="mainContainer">
	<% if flash[:notice] %>
	  <div id="noticeContainer">
	    <div id="notice">
	      <%= flash[:notice] %>
	    </div>

	    <div id="closeNotice">
	      <%= link_to image_tag("close_notice.png"), "javascript:void(0)", id: "closeNoticeButton" %>
	    </div>
	  </div>
	<% end %>

	<div id="mainContent">
	  <%= yield %>

	  <footer>
	    <%= content_for?(:footer) ? yield(:footer) : render("shared/footer") %>
	  </footer>
	</div>
	
	<div id="sidebar">
	  <div id="sidebarAd">
	    <%= image_tag "sidebar_filler.png" %>
	  </div>

	  <div class="ribbonFold">
	    <%= image_tag "ribbon_fold.png" %>
	  </div>
	  
	  <%= content_for?(:sidebar) ? yield(:sidebar) : render("shared/sidebar") %>

	  <div id="sidebarFooter">
	    <div class="sidebarLeft"></div>
	  </div>
	</div>
      </div>
      
    </div>
  </body>
</html>
