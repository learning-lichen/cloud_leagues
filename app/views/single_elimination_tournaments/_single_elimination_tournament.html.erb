<%= form_for @tournament, url: tournament_path(@tournament), method: :put do |form| %>
  <%= render "shared/error_messages", target: @tournament %>
  
  <fieldset>
    <ul class="tournamentForm">
      <li>
	<%= form.label :league, "League" %>
	<%= select_tag "tournament[league]", options_for_select(Tournament::LEAGUES.keys.collect { |k| [Tournament::LEAGUES[k], k] }) %>
      </li>

      <li>
	<%= form.label :type, "Format" %>
	<%= select_tag "tournament[type]", options_for_select([["Single Elimination", "SingleEliminationTournament"]]) %>
      </li>

      <li>
	<%= form.label :start_time, "Start Time" %>
	<%= form.datetime_select :start_time %>
      </li>

      <li>
	<%= form.label :max_players, "Maximum Number of Players" %>
	<%= form.text_field :max_players %>
      </li>

      <li>
	<%= form.submit "Submit" %>
      </li>
    </ul>
  </fieldset>
<% end %>
