<h1 id="tournamentHeader">Tournament List</h1>

<div class="actionLinksContainer">
  <div class="actionLinks">
    <%= link_to "New Tournament", new_tournament_path if can?(:create, Tournament) %>
    <%= link_to "View All", "#" %>
  </div>
</div>

<ul>
  <% @tournaments.each do |tournament| %>
    <li>
      <%= link_to "Tournament \##{tournament.id}", tournament_path(tournament) %>
    </li>
  <% end %>
</ul>
