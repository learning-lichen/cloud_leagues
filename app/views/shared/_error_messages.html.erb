<%
  # This partial view displays error messages for a form. The object used in
  # the form is passed as a target.
%>

<% if target.errors.any? %>
  <div id="errorExplanation">
    <h2>There were <%= pluralize(target.errors.count, "error") %>.</h2>
    
    <ul>
      <% target.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
