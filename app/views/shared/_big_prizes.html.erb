      </a>
      
      <a href="javascript:void(0)" title="Master" id="masterTab" class="biggestPrizePoolsTab">
	<%= image_tag image_for_league(Tournament::MASTER) %>
      </a>
      
      <a href="javascript:void(0)" title="Diamond" id="diamondTab" class="biggestPrizePoolsTab">
	<%= image_tag image_for_league(Tournament::DIAMOND) %>
      </a>
      
      <a href="javascript:void(0)" title="Platinum" id="platinumTab" class="biggestPrizePoolsTab">
	<%= image_tag image_for_league(Tournament::PLATINUM) %>
      </a>
      
      <a href="javascript:void(0)" title="Gold" id="goldTab" class="biggestPrizePoolsTab">
	<%= image_tag image_for_league(Tournament::GOLD) %>
      </a>
      
      <a href="javascript:void(0)" title="Silver" id="silverTab" class="biggestPrizePoolsTab">
	<%= image_tag image_for_league(Tournament::SILVER) %>
      </a>
      
      <a href="javascript:void(0)" title="Bronze" id="bronzeTab" class="biggestPrizePoolsTab">
	<%= image_tag image_for_league(Tournament::BRONZE) %>
      </a>
    </div>

    <div id="gmContent" class="biggestPrizePoolsContent">
      <%= render "shared/big_prizes_for_league", league: Tournament::GRAND_MASTER, limit: 5 %>
    </div>
    
    <div id="masterContent" class="biggestPrizePoolsContent">
      <%= render "shared/big_prizes_for_league", league: Tournament::MASTER, limit: 5 %>
    </div>
    
    <div id="diamondContent" class="biggestPrizePoolsContent">
      <%= render "shared/big_prizes_for_league", league: Tournament::DIAMOND, limit: 5 %>
    </div>
    
    <div id="platinumContent" class="biggestPrizePoolsContent">
