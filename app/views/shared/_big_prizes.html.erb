    </div>
    
    <div id="goldContent" class="biggestPrizePoolsContent">
      <%= render "shared/big_prizes_for_league", league: Tournament::GOLD, limit: 5 %>
    </div>
    
    <div id="silverContent" class="biggestPrizePoolsContent">
      <%= render "shared/big_prizes_for_league", league: Tournament::SILVER, limit: 5 %>
    </div>
    
    <div id="bronzeContent" class="biggestPrizePoolsContent">
      <%= render "shared/big_prizes_for_league", league: Tournament::BRONZE, limit: 5 %>
    </div>
  </div>
</div>
