<div id="userNavigation">
  <h2>User Navigation</h2>
  <% if current_user.nil? %>
    <ul>
      <li>
	Welcome Guest
      </li>
      
      <li>
	<%= link_to "Login", login_path %>
      </li>
      
      <li>
	<%= link_to "Register", new_user_path %>
      </li>
    </ul>
  <% else %>
    <ul>
      <li>
	Welcome <%= current_user.login %>
      </li>

      <li>
	<%= link_to "Your Profile", user_profile_path(current_user) %>
      </li>
    </ul>
  <% end %>
</div>
